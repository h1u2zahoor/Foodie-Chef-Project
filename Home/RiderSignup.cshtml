
@{
    ViewBag.Title = "RiderSignup";
}

<head>
    <title>Rider | Signup</title>
    <link rel="stylesheet" href="~/Content/StyleSheet1.css" />
    <script type="text/javascript">

            function validate() {
                var password = document.getElementById("psw");

                var f1 = false, f2 = false;
                if (password.value.length < 8) {
                    alert("Password length must be 8 characters or more!");
                    f1 = false;
                }
                else
                    f1 = true;
                if (true) {
                    var cell = document.getElementById("cell").value;
                    var regx = /^[0][3]\d{9}$/;
                    if (regx.test(cell)) {
                        f2 = true;
                    }
                    else {
                        alert("Enter valid cell number!");
                        f2 = false;
                    }
                }
                if (f1 && f2 )
                    return true;
                else if (!f1  && !f2)
                    return false;
                else if (!f1  && f2)
                    return false;
                else if (f1 && !f2)
                    return false;
        }
    </script>
</head>
<body>

    <header>

        <div>

            <div id="container2" style="width: 50%; float: left">
                <div class="box">
                    <div class="centered">
                        <h style="font-size:200%"><b> Welcome To FoodieChef</b></h><br>
                        <q>My body is a temple where junk food goes to worship</q>
                    </div>

                </div>
                <!--<img src="C:\Users\user\Desktop\Database\WebApplication2\WebApplication2\photo-1490818387583-1baba5e638af.jpg" height=650 width=650>-->
            </div>

            <form onsubmit=" return validate()" method="post" action="../Home/authenticateRiderSignup">
                <div class="container">
                    <div class="centered1">
                        <h style="font-size:200% ; color: black"><b>&nbsp;&nbsp;&nbsp; Sign Up </b></h>
                    </div>

                    @*<h3 align="center"><u>Signup</u></h3>*@

                    <label for="uname"><b>Name</b></label><br />
                    <input type="text" placeholder="Enter Name" id="uname" name="uname" required>

                    <label for="psw"><b>Password</b></label><br />
                    <input type="password" placeholder="Enter Password" id="psw" name="psw" required><br />

                    <label for="cell"><b>Cell Number</b></label><br />
                    <input type="text" placeholder="Enter Cell Number" id="cell" name="cell" required><br />

                    <button type="submit">Register</button><br />
                    Already have an account?
                    @Html.ActionLink("Login", "RiderLogin", "Home")<br /><br /><br />
                </div>
            </form>
        </div>
    </header>

</body>